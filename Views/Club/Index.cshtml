@model TesisPadel.Models.Club;
@{
    ViewData["Title"] = "Club";
}
@* <section> *@
    <!--modal-->
    <div class="modal fade" id="ModalClub" tabindex="1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header fondom">
                    <h5 class="modal-title letra " id="exampleModalLabel">Agregar Club</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="files" method="post" enctype="multipart/form-data">
                <div class="modal-body fondom">
                    <input type="hidden" id="ClubId" value="0" class="letra">
                    <div class="control-label">
                        <p class="letra">Nombre</p>
                        <input name="Nombre" type="text" class="form-control fondoi" id="Nombre" autocomplete="off">
                        <span asp-validation-for="Nombre" class="text-danger"></span>
                        <p class="letra">Localidad</p>
                        <input name="Localidad" type="text" class="form-control fondoi" id="Localidad" autocomplete="off">
                        <span asp-validation-for="Localidad" class="text-danger"></span>
                    </div>
                    <div>
                        <label class="control-label">Imagen</label>
                        <input type='file' class="form-control" accept="image/*" name="imagen" id='imagen'>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="button-8" role="button" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" onclick="GuardarClub()" class="button-87" role="button">Guardar</button>
                    </div>
                </div>
                </form>
            </div>
        </div>
    </div>
    <h1 class="display-4 titulo bajar" style="font-family: Verdana, Geneva, Tahoma, sans-serif;">Club</h1>

    <!-- Button trigger modal -->
    <div>
        <div class="mb-2">
            <button type="button" onclick="VaciarFormulario()" class="button-87" role="button" data-bs-toggle="modal"
                data-bs-target="#ModalClub">
                Nuevo
            </button>
        </div>
        <div>
                    <table class="table table-dark table-bordered table-striped">
                        <thead>
                            <tr>
                                <th scope="col" class="lt">Club</th>
                                <th scope="col" class="lt">Localidad</th>
                                <th style="width: 30% !important;" scope="col" class="lt">boton</th>
                                <th scope="col" class="lt">Imagen</th>
                            </tr>
                        </thead>
                        <tbody id="tbody-club">
                        </tbody>
                    </table>
                    
        </div>
    </div>
@* </section> *@

@section Scripts{
    <script src="~/js/club-1.0.0.js"></script>
}
