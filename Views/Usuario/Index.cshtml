@model IEnumerable<TesisPadel.Models.Usuario>

 @{
Layout = "_Layout";
}

<!DOCTYPE html>

<html class="Formato">
<head>
<meta name="viewport" content="width=device-width" />
<h1 style="color: white;">Usuario</h1>
</head>
<body>
<p>
<a class="botonCrear" asp-action="Create">Crear nuevo</a>
</p>
<div>
<table class="table" style="color: white;">
<thead>
<tr>
<th>
@Html.DisplayNameFor(model => model.Localidad)
</th>
<th>
@Html.DisplayNameFor(model => model.Nombre)
</th>
<th>
@Html.DisplayNameFor(model => model.Apellido)
</th>
<th>
@Html.DisplayNameFor(model => model.Edad)
</th>
<th>
@Html.DisplayNameFor(model => model.Telefono)
</th>
<th>
@Html.DisplayNameFor(model => model.DNI)
</th>
<th>
@Html.DisplayNameFor(model => model.Direccion)
</th>
<th>
@Html.DisplayNameFor(model => model.Eliminado)
</th>
<th></th>
</tr>
</thead>
<tbody>
@foreach (var item in Model) {
<tr>
<td>
@Html.DisplayFor(modelItem => item.Localidad)
</td>
<td>
@Html.DisplayFor(modelItem => item.Nombre)
</td>
<td>
@Html.DisplayFor(modelItem => item.Apellido)
</td>
<td>
@Html.DisplayFor(modelItem => item.Edad)
</td>
<td>
@Html.DisplayFor(modelItem => item.Telefono)
</td>
<td>
@Html.DisplayFor(modelItem => item.DNI)
</td>
<td>
@Html.DisplayFor(modelItem => item.Direccion)
</td>
<td>
@Html.DisplayFor(modelItem => item.Eliminado)
</td>
<td>
<a class="botonEditar" asp-action="Edit" asp-route-id="@item.UsuarioId">Editar</a>
<a class="btn botonEliminar" asp-action="Delete" onclick="EliminarUsuario(@item.UsuarioId);">Eliminar</a>
</td>
</tr>
}
</tbody>
</table>
</div>

</body>
</html> 

