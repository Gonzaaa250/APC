@model TesisPadel.Models.Categoria;
@{
   ViewData["Title"] = "Categoria";
}
    <div class="modal fade" id="ModalCategoria" tabindex="1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header fondom">
                    <h5 class="modal-title letra " id="exampleModalLabel">Agregar Categoria</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <form id="files" method="post" enctype="multipart/form-data">
                <div class="modal-body fondom">
                    <input name="ClubId" type="hidden" id="CategoriaId" value="0" class="letra">
                    <div class="control-label">
                        <p class="letra">Nombre</p>
                        <input name="tipo" type="text" class="form-control fondoi" id="Tipo" autocomplete="off">

                    </div>
                    <div class="modal-footer">
                        <button type="button" class="button-8" role="button" data-bs-dismiss="modal">Cerrar</button>
                        <button type="button" onclick="GuardarCategoria()" class="button-87" role="button">Guardar</button>
                    </div>
                </div>
                </form>
            </div>
        </div>

    <table class="table table-dark table-bordered table-striped">
        <thead>
            <tr>
                <th scope="col" class="lt">Tipo</th>

                <th style="width: 22% !important;" scope="col" class="lt"></th>
            </tr>
        </thead>
        <tbody id="tbody-categoria">
        </tbody>
    </table>

</div>
@section Scripts{
    <script src="~/js/categoria.js"></script>
}